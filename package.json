{
  "name": "skyve-wezo-radix",
  "version": "1.0.0",
  "private": true,
  "description": "Full-stack Skyve Wezo application with client and server",
  "scripts": {
    "dev": "concurrently \"npm run dev:client\" \"npm run dev:server\"",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server && npm run dev",
    "dev:safe": "node scripts/start-both.js",
    "dev:client:safe": "node scripts/start-client.js",
    "dev:server:safe": "node scripts/start-server.js",
    "build": "npm run build:client && npm run build:server",
    "build:client": "cd client && npm run build",
    "build:server": "cd server && npm run build",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "lint": "cd client && npm run lint",
    "preview": "cd client && npm run preview",
    "start": "concurrently \"npm run start:client\" \"npm run start:server\"",
    "start:client": "cd client && npm run preview",
    "start:server": "cd server && npm run start",
    "port:check": "node scripts/port-handler.js"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  },
  "workspaces": [
    "client",
    "server"
  ]
}